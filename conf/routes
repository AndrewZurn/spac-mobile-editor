# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Single endpoint for serving AngularJS
GET     /											@controllers.Application.index
GET     /randomUUID           @controllers.Application.randomUUID

# User management API
GET     /users                @controllers.Users.findUsers
POST    /user                 @controllers.Users.createUser

GET 		/:classType						@controllers.ScheduleController.find(classType: String)
POST		/:classType/:id 			@controllers.ScheduleController.create(id: String, classType: String)
PUT			/:classType/:id 			@controllers.ScheduleController.update(id: String, classType: String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
